<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/back_ground_color"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/rectangle_c"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="115dp"
        android:background="@drawable/ic_rectangle"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/heading"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:textSize="42sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="9dp"
        android:text="@string/label_text"
        android:textSize="24sp"
        android:textColor="@color/label_text_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp">
    <View
        android:id="@+id/bg"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/ic_bg"
        />
    <View
        android:id="@+id/oval"
        android:layout_width="8dp"
        android:layout_height="8.89dp"
        android:layout_marginTop="15.44dp"
        android:layout_marginStart="-23dp"
        android:backgroundTint="@color/icon_color"
        android:background="@drawable/ic_oval"
        />
        <View
            android:layout_width="16dp"
            android:layout_height="6.82dp"
            android:layout_marginTop="26.11dp"
            android:layout_marginStart="-11.8dp"
            android:background="@drawable/ic_path"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:text="@string/full_name"
            android:textSize="18sp"
            android:textColor="@color/text_color_gray"
            android:layout_marginStart="29dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_line"
        android:layout_marginStart="88dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp">
        <View
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/ic_bg"
            />
        <View
            android:layout_width="8dp"
            android:layout_height="8.89dp"
            android:layout_marginTop="15.44dp"
            android:layout_marginStart="-23dp"
            android:backgroundTint="@color/icon_color"
            android:background="@drawable/ic_oval"
            />
        <View
            android:layout_width="16dp"
            android:layout_height="6.82dp"
            android:layout_marginTop="26.11dp"
            android:layout_marginStart="-11.8dp"
            android:background="@drawable/ic_path"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:text="@string/user_name"
            android:textSize="18sp"
            android:textColor="@color/text_color_gray"
            android:layout_marginStart="29dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_line"
        android:layout_marginStart="88dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        >
        <View
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_base"
            />
        <View
            android:layout_width="16dp"
            android:layout_height="9dp"
            android:layout_marginTop="24.5dp"
            android:layout_marginStart="-37dp"
            android:background="@drawable/ic_arrow_left"
            />
        <View
            android:layout_width="245dp"
            android:layout_height="58dp"
            android:layout_marginStart="33dp"
            android:background="@drawable/ic_base_1_"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="-143dp"
            android:layout_marginTop="18dp"
            />
        <View
            android:layout_width="16dp"
            android:layout_height="9dp"
            android:layout_marginTop="24.5dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_arrow_right"
            />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>